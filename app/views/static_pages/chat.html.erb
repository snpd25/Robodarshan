<div class="img-header ihws">
  <div class="container">
    <div class="head-space"></div>
    <h1>Chat</h1>
    <p>Some text here</p>
  </div>
</div>
<div class="container my-3">
  <div class="row">
    <div class="col-12 col-md-3">
      <div class="list-group">
        <h2 class="list-group-item list-group-item-action active">
          User List
        </h2>
        <ul>
          <% @users.each do |user| %>
          <li>
            <%= link_to user.name, conversations_path(user_id: user), remote: true, method: :post, class: 'list-group-item list-group-item-action' %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-12 col-md-9">
      <ul id="conversations-list">
        <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
        <% end %>
      </ul>
    </div>
  </div>
</div>