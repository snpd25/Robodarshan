<% provide(:title, @user.name) %>
<div class="container my-3">
  <div class="row">
    <div class="col-12 col-md-4 justify-content-center text-center my-2">
      <div class="card card-body">
        <div class="row">
          <div class="col col-md-12">
            <%= gravatar_for @user %>
          </div>
          <div class="col col-md-12 al">
            <h3 class="pt-2">
              <%= @user.name %>
            </h3>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-8 my-2">
      <% if @user.projects.any? %>
      <h3>Projects (<%= @user.projects.count %>)</h3>
      <ol class="projects">
        <%= render @projects %>
      </ol>
      <%= will_paginate @projects %>
      <% end %>
    </div>

  </div>
</div>