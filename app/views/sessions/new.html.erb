<% provide(:title, "Log in") %>
<div class="container my-3">
  <div class="row pt-3">
    <div class="col-sm-10 col-md-6 col-lg-4 mx-auto">
      <div class="card card-body pb-2">
        <h3 class="text-center pt-2">Account Login</h3>
        <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'bmd-label-floating'  %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'bmd-label-floating' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="text-right">
          <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
        <% end %>
        <p class="text-center">New user?
          <%= link_to "Sign up now!", signup_path %>
        </p>
      </div>
    </div>
  </div>
</div>